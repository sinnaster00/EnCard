<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.helper.widget.Flow
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:constraint_referenced_ids="lottieAnimBoard, tvCategoryBoard, tvDescriptionBoard, btnBoard"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieAnimBoard"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:lottie_autoPlay="true"
        app:lottie_loop="true" />

    <TextView
        android:textColor="@color/black"
        android:textSize="24sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Категории"
        android:id="@+id/tvCategoryBoard"/>

    <TextView
        android:id="@+id/tvDescriptionBoard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Description"
        android:textColor="@color/black"
        android:paddingHorizontal="22dp"
        android:textSize="16sp"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Let's do it"
        android:textSize="18sp"
        android:background="@drawable/circle_btn"
        android:textColor="@color/white"
        android:id="@+id/btnBoard"/>
</androidx.constraintlayout.widget.ConstraintLayout>